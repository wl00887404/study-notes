{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe 建置使用中檔案",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "偵錯工具產生的工作。"
    }
  ],
  "version": "2.0.0"
}
